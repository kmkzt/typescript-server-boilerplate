{
  "name": "typescript-server-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development nodemon",
    "build": "rimraf dist && mkdirp ./dist/public && cp -r ./src/public ./dist &&  tsc ./src/index.ts  --outDir ./dist",
    "heroku-postbuild": "mkdirp ./dist/public && cp -r ./src/public ./dist &&  tsc ./src/index.ts  --outDir ./dist",
    "graphql:codegen": "graphql-codegen --config codegen.yml",
    "typeorm": "ts-node -r ./tsconfig.json ./node_modules/typeorm/cli.js",
    "typeorm:dev:run": "NODE_ENV=development yarn typeorm migration:run",
    "typeorm:dev:migrate": "NODE_ENV=development yarn typeorm migration:generate -n ",
    "typeorm:dev:revert": "NODE_ENV=development yarn typeorm migration:revert",
    "typeorm:dev:sync": "NODE_ENV=development yarn typeorm schema:sync",
    "typeorm:dev:drop": "NODE_ENV=development yarn typeorm schema:drop",
    "typeorm:dev:cacheclear": "NODE_ENV=development yarn typeorm cache:clear"
  },
  "author": "kmkzt",
  "license": "MIT",
  "engines": {
    "node": ">=10.3.0"
  },
  "dependencies": {
    "ajv": "6.10.0",
    "apollo-server-express": "2.14.2",
    "aws-sdk": "2.437.0",
    "body-parser": "1.19.0",
    "class-validator": "0.9.1",
    "dotenv": "16.4.5",
    "express": "4.16.4",
    "express-session": "1.16.1",
    "graphql": "16.9.0",
    "jsonwebtoken": "8.5.1",
    "mysql": "2.16.0",
    "pg-promise": "11.10.1",
    "react-apollo": "2.5.5",
    "s3": "4.4.0",
    "socket.io": "2.2.0",
    "typeorm": "0.2.17"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.0.7",
    "@graphql-codegen/introspection": "1.0.7",
    "@graphql-codegen/typescript": "1.0.7",
    "@graphql-codegen/typescript-graphql-files-modules": "1.0.7",
    "@graphql-codegen/typescript-operations": "1.0.7",
    "@graphql-codegen/typescript-react-apollo": "1.0.7",
    "@graphql-codegen/typescript-resolvers": "1.0.7",
    "@types/ajv": "1.0.0",
    "@types/body-parser": "1.17.0",
    "@types/dotenv": "8.2.0",
    "@types/eslint": "9.6.1",
    "@types/eslint-plugin-prettier": "3.1.3",
    "@types/express": "5.0.0",
    "@types/express-session": "1.15.12",
    "@types/graphql": "14.2.0",
    "@types/jsonwebtoken": "9.0.7",
    "@types/mkdirp": "2.0.0",
    "@types/mysql": "2.15.6",
    "@types/pg-promise": "5.4.3",
    "@types/rimraf": "4.0.5",
    "@types/socket.io": "3.0.2",
    "eslint": "5.16.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "mkdirp": "3.0.1",
    "nodemon": "3.1.7",
    "rimraf": "6.0.1",
    "ts-node": "10.9.2",
    "typescript": "5.6.3"
  },
  "description": ""
}
